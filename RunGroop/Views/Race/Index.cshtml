@model IEnumerable<Race>
@{
}
<div class="container">
    <h1>Races</h1>
</div>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="@item.Image" class="bd-placeholder-img card-img-top" width="100%" height="225" />
                        <div class="card-body">
                            <h1>@item.Title</h1>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id" type="button"
                                        class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id" type="button"
                                            class="btn btn-sm btn-outline-secondary">
                                            Edit
                                        </a>
                                        <a asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id" type="button"
                                            class="btn btn-sm btn-outline-secondary">
                                            Delete
                                        </a>
                                    }

                                </div>
                                <small class="text-body-secondary">@item.RaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
