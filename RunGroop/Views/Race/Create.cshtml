@using RunGroop.Data.Enum
@model Race
@{

}
<h1>Create Race</h1>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="mb-3 form-group">
        <label asp-for="Title" class="form-label">Title:</label>
        <input asp-for="Title" type="text" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" type="text" class="form-control" id="description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label asp-for="RaceCategory" class="form-label">Category</label>
        <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()">
            <option value="">--Select--</option>
        </select>
        <span asp-validation-for="RaceCategory" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group">
        <label asp-for="Address.Street" class="form-label">Street</label>
        <input asp-for="Address.Street" type="text" class="form-control">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label asp-for="Address.City" class="form-label">City</label>
        <input asp-for="Address.City" type="text" class="form-control">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label asp-for="Address.State" class="form-label">State</label>
        <input asp-for="Address.State" type="text" class="form-control">
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" type="file" class="form-control" id="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>