@using RunGroop.ViewModels
@model EditUserViewModel

<div class="main-container">
    <section class="bg-white space-sm pb-4">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <h1 class="h2">Account Settings</h1>
                </div>
                <!--end of col-->
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->
    <section class="flush-with-above height-80 d-block">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="profile" role="tabpanel">
                <div class="container">
                    <div class="row mb-4">
                        <div class="col">
                            <h2>Profile Information</h2>
                        </div>
                        <!--end of col-->
                    </div>
                    <!--end of row-->
                    <div class="row">
                        <!--end of col-->
                        <div class="col-12 col-md-8 order-md-1">
                            <form asp-action="EditProfile" method="post" enctype="multipart/form-data" class="row">
                                <input type="hidden" id="Id" asp-for="Id">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="City">City:</label>
                                        <input asp-for="City" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="State">State:</label>
                                        <input asp-for="State" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="Pace">Pace:</label>
                                        <input asp-for="Pace" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="Pace" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="Mileage">Mileage:</label>
                                        <input asp-for="Mileage" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="Mileage" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="about-me">About me:</label>
                                        <textarea class="form-control form-control-lg" name="profileBio" rows="4"
                                            id="about-me"></textarea>
                                    </div>
                                </div>
                                <div class="media flex-wrap mb-5 mt-5 align-items-center">
                                    @{
                                        var imageUrl = string.IsNullOrEmpty(Model.ProfileImageUrl)
                                        ? "/img/avatar-male-3.jpg"
                                        : Model.ProfileImageUrl;
                                    }
                                    <img alt="Image" src="@imageUrl" class="avatar avatar-lg mb-3 mb-md-0" />
                                    <div class="media-body form-group">
                                        <label asp-for="Image">Profile Image</label>
                                        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                        <div>
                                            <small>For best results, use an image at least 256px by 256px in either
                                                .jpg or .png format</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <button class="btn btn-primary" type="submit">Save changes</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!--end of col-->
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </div>
            <!--end of tab pane-->
        </div>
        <!--end of tabs content-->
    </section>
    <!--end of section-->
</div>


<script type="text/javascript">
    function submitProfileImage() {
        document.getElementById("submit-image-button").click();
    }
</script>